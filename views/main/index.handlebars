<main class="main">
    <div class="newPost">
        <div class="infoUser">
            <a href="/user/perfil">
                <div class="imgUser">
                    {{#each user}}
                    {{#if imgPerfil}}
                    <img src="{{imgPerfil}}" alt="">
                    {{/if}}
                    {{/each}}
                </div>
            </a>

            {{#each user}}
            {{#if name}}
            <a href="/user/perfil"><strong>{{name}}</strong></a>
            {{/if}}
            {{else}}
            <strong>Usuário</strong>
            {{/each}}
        </div>
        <!--form-->
        <form class="formPost" action="user/post/add" method="post">
            <textarea name="feed" placeholder="No que está pensando?"></textarea>
            <div id="addImg">

            </div>

            <div class="iconsAndButton">
                <div class="icons">
                    <img src="/img/btnImg.png" onclick="insertImg()" class="btnFileForm" width="25px"
                        alt="Adicionar imagem">
                </div>
                <button type="submit" class="btnSubmitForm">Publicar</button>
            </div>
        </form>
    </div>

    <ul class="posts">
        {{#each posts}}
        <li class="post">
            <div class="infoUserPost">
                <div class="imgUserPost">
                    {{#if user.imgPerfil}}
                    <img src="{{user.imgPerfil}}" alt="">
                    {{/if}}
                </div>

                <div class="nameAndHour">
                    <strong>{{user.name}}</strong>
                    <p>{{datePost}}</p>
                </div>
            </div>
            <p>{{post}}</p>
            {{#if img}}
            <div class="boxImg">
                <img class="imgFeed" src="{{img}}" alt="">
            </div>
            {{else}}
            {{/if}}
            <div class="coment">
                <form action="/user/coment" method="post">
                    <input type="hidden" name="postId" value="{{_id}}"> 
                    <textarea placeholder="Deixe seu comentário." name="coment" id="" cols="30" rows="10"></textarea>
                    <button type="submit" >Comentar</button>
                </form>
            </div>
            {{#each coments}}
            <div class="coments">
                <strong>{{user}}</strong>
                <p>{{coment}}</p>
                {{!-- <form class="delComent" action="/user/delete/coment" method="post">
                    <input type="hidden" name="id" value="{{../_id}}">
                    <input type="hidden" name="indexComent" value="{{@index}}">
                <button type="submit">Apagar</button>
            </form> --}}
            </div>
            {{else}}
            {{/each}}

            {{!-- <div class="btnPost">
                <form action="user/like" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="FilesPost like">Curtir</button>
                </form>
                <strong class="textStrong">Likes: {{likes}}</strong>
            </div> --}}
        </li>
        {{else}}
        <strong>Nenhum post encontrado!</strong>
        {{/each}}
    </ul>

</main>