<div class="main">
   <div class="newPost">
        <div class="infoUserPerfil">
            <div class="imgUserPerfil"></div>
            {{#each user}}
                {{#if name}}
                <strong>{{name}}</strong>
                {{/if}}
            {{else}}
                <strong>Usu√°rio</strong>
            {{/each}}
        </div>
        <div class="userDados">
             {{#each user}}
                {{#if email}}
                <p>Email: <strong>{{email}}</strong></p>
                {{/if}}
                {{#if email}}
                <p>Conta Criada: <strong>{{date}}</strong></p>
                {{/if}}
            {{else}}
                <p>Email:</p>
            {{/each}}
        </div>
    </div>
    <ul class="posts">
        {{#each posts}}
        <li class="post">
            <div class="infoUserPost">
                <div class="imgUserPost"></div>

                <div class="nameAndHour">
                    <strong>{{userPost}}</strong>
                    <p>{{date}}</p>
                </div>
            </div>
            <p>{{feed}}</p>
            {{#if img}}
            <div class="boxImg">
                <img class="imgFeed"
                    src="{{img}}" alt="">
            </div>
            {{else}}
            {{/if}}
            <div class="btnPost">
                <strong class="textStrong">Likes: {{likes}}</strong>
            </div>
        </li>
        {{else}}
        <strong>Nenhum post encontrado!</strong>
        {{/each}}
    </ul>
</div>