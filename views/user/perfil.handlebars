<div class="main">
    <div class="newPost">
        <div class="infoUserPerfil">
            <div onclick="addImgPerfil()" class="imgUserPerfil">
                {{#each user}}
                {{#if imgPerfil}}
                <img src="{{imgPerfil}}" alt="">
                {{/if}}
                {{/each}}
            </div>

            {{#each user}}
            {{#if name}}
            <strong>{{name}}</strong>
            {{/if}}
            {{else}}
            <strong>Usuário</strong>
            {{/each}}

        </div>


        <div class="userDados">

            {{#each user}}
            {{#if email}}
            <p>Email: <strong>{{email}}</strong></p>
            {{/if}}

            {{else}}
            <p>Email:</p>
            {{/each}}

        </div>
        <div class="addPerfil" id="addPerfil">

        </div>
    </div>
    <ul class="posts">
        {{#each posts}}
        <li class="post">
            <div class="infoUserPost">

                <div class="imgUserPost">
                    {{#if user.imgPerfil}}
                    <img src="{{user.imgPerfil}}" alt="">
                    {{/if}}
                </div>

                <div class="nameAndHour">
                    <strong>{{user.name}}</strong>
                    <p>{{datePost}}</p>
                </div>
            </div>
            <p>{{post}}</p>
            {{#if img}}
            <div class="boxImg">
                <img class="imgFeed" src="{{img}}" alt="">
            </div>
            {{else}}
            {{/if}}
            <div class="btnPost">
                <strong class="textStrong">Likes: {{likes}}</strong>
            </div>
        
             <div class="coment">
                <form action="/user/coment/perfil" method="post">
                    <input type="hidden" name="postId" value="{{_id}}">
                    <textarea placeholder="Deixe seu comentário." name="coment" id="" cols="30" rows="10"></textarea>
                    <button>Comentar</button>
                </form>
            </div>

            {{#each coments}}
            <div class="coments">
                <strong>{{user}}</strong>
                <p>{{coment}}</p>
                <form class="delComent" action="/user/delete/coment" method="post">
                    <input type="hidden" name="id" value="{{../_id}}">
                    <input type="hidden" name="indexComent" value="{{@index}}">
                <button type="submit">Apagar</button>
            </form>
            </div>
            {{else}}
            {{/each}}

             <div class="btnPost">
                <form action="/user/delete/post" method="post">
                    <input type="hidden" name="idPost" value="{{_id}}">
                    <button type="submit" class="FilesPost like">Excluir</button>
                </form>
            </div>
        </li>
        {{else}}
        <strong>Nenhum post encontrado!</strong>
        {{/each}}
    </ul>
</div>